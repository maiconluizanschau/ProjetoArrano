@model IEnumerable<PorjetoUfsmArrano.Models.BasesMilitares>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br /><br /><br /><br /><br />
<section class="content-header">
    <div class="row">
        <div class="col-sm-12 col-md-12" style="padding-right: 0px; padding-left: 0px;">
            <div class="col-xs-9 col-sm-6 col-md-6" style="padding-right: 0px; padding-left: 18px;">
                <h1 class="titulo">
                    Bases Militares

                </h1>
            </div>
            <div class="col-xs-3 col-sm-6 col-md-6 hidden-xs" style="padding-right: 0px; padding-left: 0px;">
                &nbsp;<img style="float: right; width: 100px; margin-top: 25px;" src="@Href("~/Content/imagens/logo.png")" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12" style="border-bottom: 1px solid #666666;">
            <ol class="navegacao breadcrumb">
                <li><a href="@Url.Action("../Home")">Início</a></li>
                <li class="active">Bases Militares</li>
            
            </ol>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">

                    <h3 class="box-title"><a href="@Url.Action("Cadastrar")" class="btn btn-facebook"><i class="fa fa-plus"></i> Cadastrar</a></h3>

                </div><!-- /.box-header -->
            </div>
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.TipoBase)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.uf)
            </th>
            
           
            
            <th>
                @Html.DisplayNameFor(model => model.NomeFantasia)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img style="max-height:100px;max-width:200px" src="data:image/png;base64,@System.Convert.ToBase64String(item.logo, 0, item.logo.Length)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.TipoBase)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.uf)
                </td>
              
               
                <td>
                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                </td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("Editar", new { id=item.id_BasesMilitares })" class="btn btn-facebook"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Detalhes", new { id=item.id_BasesMilitares })" class="btn btn-facebook"><i class="fa fa-eye"></i></a>
                        <a href="@Url.Action("Deletar", new { id=item.id_BasesMilitares })" class="btn btn-facebook"><i class="fa fa-remove"></i></a>

                    </div>
                </td>
            </tr>
        }

    </table>
